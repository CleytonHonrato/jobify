<%- include('header') %>

<h2>
  Editar vaga |
  <a href="/admin/vaga">Vagas</a>
</h2>
<div>
  <form method="POST">
    <label> Titulo da vaga: </label>
    <input type="text" name='titulo' value="<%= vaga.titulo%>">

    <br>

    <label> Descricao da vaga: </label>
    <textarea name='descricao'><%= vaga.descricao%></textarea>

    <br>

    <label> categorias: </label>
    <select name='categorias'>
      <% categorias.forEach(categoria => { %>

      <option value="<%= categoria.id %>" <% if(categoria.id == vaga.categoria){ %>selected<% } %>>
        <%= categoria.categoria %></option> <% }) %> </select>
    <br>
    <button>Salvar vagas</button>


  </form>



</div>
<%- include('footer') %>
